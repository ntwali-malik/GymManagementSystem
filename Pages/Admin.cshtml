@page
@model ProjectGym.Pages.AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/all.min.css">
    <link rel="stylesheet" href="/css/framework.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alegreya:ital@0;1&family=Henny+Penny&family=Montserrat:wght@800&family=Open+Sans:wght@400;700&family=Poppins:wght@600;800&family=Source+Sans+Pro:wght@600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js">
        </script>
    <title>Dashboard</title>
</head>
<body>
    <!-- Start page -->
    <div class="page d-f">
        <div class="sidebar bg-w p-20 p-relative" id="sidebar">
            <h3 class="p-relative txt-c mt-0">Gym</h3>
            <ul>
                <li>
                    <a class="active d-f align-center fs-14 c-black red-6 p-10" href="/Members/Index">
                        <span>Memeber</span>
                    </a>
                </li>
                <li>
                    <a class="d-f align-center fs-14 c-black red-6 p-10" href="/Memberships/Index">
                        <span>MemberShip</span>
                    </a>
                </li>
                <li>
                    <a class="d-f align-center fs-14 c-black red-6 p-10" href="/Trainers/Index">
                        <span>Trainer</span>
                    </a>
                </li>
                <li>
                    <a class="d-f align-center fs-14 c-black red-6 p-10" href="/Classes/Index">
                        <span>Class</span>
                    </a>
                </li>
                <li>
                    <a class="d-f align-center fs-14 c-black red-6 p-10" href="/Attendances/Index">
                        <span>Attendance</span>
                    </a>
                </li>
                <li>
                    <a class="d-f align-center fs-14 c-black red-6 p-10" href="/Login">
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="content w-full" id="main-content">
            <div class="container">
                <h2 class="my-4">Dashboard</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-primary text-white">
                                Membership Statistics
                            </div>
                            <div class="card-body">
                                <canvas id="membershipChart" width="100%" height="50"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-success text-white">
                                Revenue Overview
                            </div>
                            <div class="card-body">
                                <canvas id="revenueChart" width="100%" height="50"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-warning text-white">
                                Pending Tasks
                            </div>
                            <div class="card-body">
                                <ul>
                                    <li>Follow up on overdue payments</li>
                                    <li>Schedule new classes for the week</li>
                                    <li>Order additional equipment</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                Recent Activity
                            </div>
                            <div class="card-body">
                                <ul>
                                    <li>John Doe joined as a new member</li>
                                    <li>Yoga class scheduled for tomorrow</li>
                                    <li>Equipment maintenance scheduled</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <!-- End page -->

</body>
<script>
    // Dummy data for charts
    const membershipData = [150, 200, 250, 300, 350, 400, 450];
    const revenueData = [5000, 6000, 7000, 8000, 9000, 10000, 11000];

    // Membership Chart
    new Chart(document.getElementById('membershipChart'), {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
            datasets: [{
                label: 'Membership',
                data: membershipData,
                borderColor: 'rgb(54, 162, 235)',
                borderWidth: 2,
                fill: false
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            legend: {
                display: false
            }
        }
    });

    // Revenue Chart
    new Chart(document.getElementById('revenueChart'), {
        type: 'bar',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
            datasets: [{
                label: 'Revenue ($)',
                data: revenueData,
                backgroundColor: 'rgba(75, 192, 192, 0.5)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            legend: {
                display: false
            },
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>


</html>

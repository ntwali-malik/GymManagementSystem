@page
@model ProjectGym.Pages.Classes.DeleteModel

@{
    ViewData["Title"] = "Delete Class";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0 text-center">Are you sure you want to delete this Class?</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">Class Name:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.ClassTB.ClassName)</dd>
                        <dt class="col-sm-4 font-weight-bold">Schedule:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.ClassTB.Schedule)</dd>
                        <dt class="col-sm-4 font-weight-bold">Capacity:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.ClassTB.Capacity)</dd>
                        <dt class="col-sm-4 font-weight-bold">Trainer:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.ClassTB.Trainer.Name)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form method="post">
                        <input type="hidden" asp-for="ClassTB.ClassID" />
                        <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@page
@using Microsoft.CodeAnalysis.Differencing
@using Microsoft.VisualStudio.Web.CodeGenerators.Mvc.Templates.Blazor
@model ProjectGym.Pages.Classes.AllClassesModel

@{
    ViewData["Title"] = "All Classes";
}

<div class="container py-5">
    <h1 class="text-center display-4 mb-4">@ViewData["Title"]</h1>

    <div class="table-responsive" id="report">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Class Name</th>
                    <th scope="col">Schedule</th>
                    <th scope="col">Capacity</th>
                    <th scope="col">Trainer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ClassTB)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ClassName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Schedule)</td>
                        <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Trainer.Name)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://raw.githack.com/eKoopmans/html2pdf/master/dist/html2pdf.bundle.js"></script>
<script>
    function generatePDF() {
        const element = document.getElementById("report");
        html2pdf().from(element).save();
    }
</script>
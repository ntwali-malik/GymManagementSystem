@page
@model ProjectGym.Pages.WorkoutLogs.CreateModel

@{
    ViewData["Title"] = "Create Workout Log";
}

<div class="container py-5">
    <h1 class="text-center display-4 mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="WorkoutLog.MemberID" class="control-label font-weight-bold">Member</label>
                            <select asp-for="WorkoutLog.MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                            <span asp-validation-for="WorkoutLog.MemberID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="WorkoutLog.WorkoutDate" class="control-label font-weight-bold">Workout Date</label>
                            <input asp-for="WorkoutLog.WorkoutDate" class="form-control" />
                            <span asp-validation-for="WorkoutLog.WorkoutDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="WorkoutLog.ExerciseName" class="control-label font-weight-bold">Exercise Name</label>
                            <input asp-for="WorkoutLog.ExerciseName" class="form-control" />
                            <span asp-validation-for="WorkoutLog.ExerciseName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="WorkoutLog.Sets" class="control-label font-weight-bold">Sets</label>
                            <input asp-for="WorkoutLog.Sets" class="form-control" />
                            <span asp-validation-for="WorkoutLog.Sets" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="WorkoutLog.Reps" class="control-label font-weight-bold">Reps</label>
                            <input asp-for="WorkoutLog.Reps" class="form-control" />
                            <span asp-validation-for="WorkoutLog.Reps" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="WorkoutLog.Notes" class="control-label font-weight-bold">Notes</label>
                            <input asp-for="WorkoutLog.Notes" class="form-control" />
                            <span asp-validation-for="WorkoutLog.Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg mr-2">Create</button>
                            <a asp-page="Index" class="btn btn-secondary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

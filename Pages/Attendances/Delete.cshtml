@page
@model ProjectGym.Pages.Attendances.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="text-center mb-0">Are you sure you want to delete this?</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">Attendance</h4>
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">
                            Date:
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @Html.DisplayFor(model => model.Attendance.Date)
                        </dd>
                        <dt class="col-sm-4 font-weight-bold">
                            Member:
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @Html.DisplayFor(model => model.Attendance.Member.Name)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form method="post">
                        <input type="hidden" asp-for="Attendance.AttendanceID" />
                        <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
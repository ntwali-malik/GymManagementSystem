@page
@model ProjectGym.Pages.Attendances.DetailsModel

@{
    ViewData["Title"] = "Attendance Details";
}

<div class="container py-5">
    <h1 class="text-center display-4 mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">
                            Date:
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @Html.DisplayFor(model => model.Attendance.Date)
                        </dd>
                        <dt class="col-sm-4 font-weight-bold">
                            Member:
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @Html.DisplayFor(model => model.Attendance.Member.Name)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="./Edit" asp-route-id="@Model.Attendance.AttendanceID" class="btn btn-primary btn-lg mr-2">Edit</a>
                    <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
@page
@model ProjectGym.Pages.Members.DeleteModel

@{
    ViewData["Title"] = "Delete Member";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0 text-center">Are you sure you want to delete this Member?</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">Name:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.Member.Name)</dd>
                        <dt class="col-sm-4 font-weight-bold">Email:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.Member.email)</dd>
                        <dt class="col-sm-4 font-weight-bold">Phone:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.Member.phone)</dd>
                        <dt class="col-sm-4 font-weight-bold">Address:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.Member.address)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form method="post">
                        <input type="hidden" asp-for="Member.MemberID" />
                        <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@page
@model ProjectGym.Pages.Trainers.DeleteModel

@{
    ViewData["Title"] = "Delete Trainer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0 text-center">Are you sure you want to delete this Trainer?</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">Name:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.Trainer.Name)</dd>
                        <dt class="col-sm-4 font-weight-bold">Contact:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.Trainer.Contact)</dd>
                        <dt class="col-sm-4 font-weight-bold">Specialties:</dt>
                        <dd class="col-sm-8 mb-3">@Html.DisplayFor(model => model.Trainer.Specialties)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form method="post">
                        <input type="hidden" asp-for="Trainer.TrainerID" />
                        <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary btn-lg">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

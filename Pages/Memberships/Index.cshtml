@page
@model ProjectGym.Pages.Memberships.IndexModel

@{
    ViewData["Title"] = "All Memberships";
}

<div class="container py-5">
    <div class="row justify-content-between align-items-center mb-4">
        <div class="col-auto">
            <h1 class="display-4 mb-0">@ViewData["Title"]</h1>
        </div>
        <div class="col-auto">
            <a asp-page="Create" class="btn btn-primary btn-lg">Add New Membership</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col">Member</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Membership)
                {
                    <tr>
                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>@item.Member.Name</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-page="./Edit" asp-route-id="@item.MembershipID" class="btn btn-primary">Edit</a>
                                <a asp-page="./Details" asp-route-id="@item.MembershipID" class="btn btn-info">View</a>
                                <a asp-page="./Delete" asp-route-id="@item.MembershipID" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
